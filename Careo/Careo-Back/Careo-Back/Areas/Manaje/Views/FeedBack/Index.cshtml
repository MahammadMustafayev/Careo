@model List<FeedBack>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manaje/Views/Shared/_ManajeLayout.cshtml";
    int order = 0;
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Authors:</h1>
        <a asp-action="Create" asp-controller="FeedBack" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Id</th>

                <th scope="col">FullName</th>
                <th scope="col">Person Status</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Is Deleted</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@item.Id</td>

                    <td>@item.FullName</td>
                    <td>@item.PersonStatus</td>
                    <td>@item.Description</td>
                    <td><img src="~/assets/img/slider/@item.Image" style="max-width:100px" /></td>
                    <td>@item.IsDeleted</td>

                    <td>
                        <a asp-action="Edit" asp-controller="FeedBack" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-controller="FeedBack" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


